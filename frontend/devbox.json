{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/main/.schema/devbox.schema.json",
  "packages": [
    "nodejs@24",
    "chromium",
    "cypress@latest",
    "gtk3",
    "alsa-lib",
    "xorg.xvfb",
    "nss",
    "libnotify",
    "dbus",
    "atk",
    "pango",
    "cairo",
    "cups",
    "libdrm",
    "mesa",
    "xorg.libX11",
    "xorg.libXcomposite",
    "xorg.libXdamage",
    "xorg.libXrandr",
    "glib@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "local": [
        "npm run dev"
      ]
    }
  }
}